name = Le ZOO
description = A Bootstrap Sub-theme.
core = 7.x
base theme = bootstrap

; Regions
regions[navigation]     = 'Navigation'
regions[header]         = 'Top Bar'
regions[highlighted]    = 'Highlighted'
regions[help]           = 'Help'
regions[content]        = 'Content'
regions[sidebar_first]  = 'Primary'
regions[sidebar_second] = 'Secondary'
regions[footer]         = 'Footer'

; Panels

plugins[panels][layouts] = templates/layouts

; Plugins

stylesheets[all][] = libs/stickyHeaders/jquery.stickyHeaders.css
scripts[] = libs/stickyHeaders/jquery.stickyHeaders.js

stylesheets[all][] = libs/flexslider/flexslider.css
scripts[] = libs/flexslider/jquery.flexslider-min.js

scripts[] = libs/jquery.pin.js
scripts[] = libs/lightordark.js

;scripts[] = libs/jquery.glide.min.js
; Stylesheets
stylesheets[all][] = css/style.css
scripts[] = js/custom.js


